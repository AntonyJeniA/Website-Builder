{
  "name": "visual-web-builder",
  "version": "1.0.0",
  "description": "A drag-and-drop web development tool",
  "main": "index.html",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run tests/unit",
    "test:integration": "vitest --run tests/integration",
    "test:performance": "vitest --run tests/performance",
    "test:cross-browser": "vitest --run tests/cross-browser",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.js",
    "test:e2e:headed": "playwright test --config=tests/e2e/playwright.config.js --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:cross-browser && npm run test:performance",
    "test:ci": "npm run test:all && npm run test:e2e",
    "serve": "python -m http.server 3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/ui": "^1.0.0",
    "c8": "^8.0.1",
    "jsdom": "^23.0.0",
    "vitest": "^1.0.0"
  },
  "type": "module"
}